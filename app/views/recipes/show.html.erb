<div class="container">
  <div><%= @recipe.name %></div>
  <div>
    <div>
      <h5>Preparation time : <%= @recipe.preparation_time %></h5>
    </div>
    <div>
      <h5>Public : <%= @recipe.public %></h5>
    </div>
  </div>
  <div>
    <h5>Cooking time : <%= @recipe.cooking_time %></h5>
  </div>
  <div>
    <div>
      <%= button_to 'Generate shopping list', class: "btn btn-primary" %>
    </div>
    <% if @author == current_user %>
      <div>
        <%= link_to 'Add food', new_recipe_recipes_food_path(@recipe.id), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>Burger</td>
      <td>4555</td>
      <td>$755</td>
      <td>
        <div>
          <div>
            <%= button_to 'Modify', method: :put, class: "btn btn-primary" %>
          </div>
          <div>
            <%= button_to 'Remove', method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>
